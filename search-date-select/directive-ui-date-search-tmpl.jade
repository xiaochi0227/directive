div.cost-search-select.clearfix
  div
    div.col-lg-6.col-md-6.col-sm-6.col-xs-6.clearfix(style="padding-right:0;padding-left:0;")
      label.pull-left.control-label(translate) Year
      div.col-lg-9.col-md-9.col-sm-9.col-xs-9(style="padding-right: 0;")
        ui-select(ng-model='search.year' search-enabled="false" theme="bootstrap" on-select="changeYear($item,$model)" style="width: 100%")
          ui-select-match(placeholder="{{'Year'|translate}}") {{$select.selected}}
          ui-select-choices(repeat='year in years')
            div(ng-bind='year')
    div.col-lg-6.col-md-6.col-sm-6.col-xs-6.clearfix(style="padding-right: 0;padding-left:0;")
      div.col-lg-9.col-md-9.col-sm-9.col-xs-9.pull-right(style="padding-right: 0;")
        ui-select(ng-model='search.month' search-enabled="false" theme="bootstrap" on-select="changeMonth($item,$model)" style="width: 100%")
          ui-select-match(placeholder="{{'Month'|translate}}") {{$select.selected.text|translate}}
          ui-select-choices(repeat='month in months')
            div(ng-bind='month.text|translate')
      label.pull-right.control-label(translate) Month
